<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/laoxinaghui"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/laoxianghui_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/laoxiang"
                android:clickable="true"/>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@color/bg_line_color" />


            <ImageView
                android:id="@+id/waimaihui_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:src="@drawable/waimai"
                android:clickable="true"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/laoxinaghui"
                android:text="老乡推荐"
                android:id="@+id/laoxiang_txt"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>

</LinearLayout>
