<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <ImageView
        android:id="@+id/shou_list_image"
        android:layout_width="0.0dip"
        android:layout_height="80.0dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1.0"
        android:scaleType="fitXY"
        android:src="@drawable/defualt" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="2.5"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="2.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shou_list_name"
                        android:layout_width="100.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:singleLine="true"
                        android:textColor="@color/text_black_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/shou_v_image"
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/v_icon" />

                    <ImageView
                        android:id="@+id/shou_wai_image"
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        android:src="@drawable/wai" />
                </LinearLayout>

                <TextView
                    android:id="@+id/shou_list_price"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="120/人"
                    android:textColor="@color/text_red_color"
                    android:textSize="16sp"
                    android:layout_weight="1.0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shou_list_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/text_red_color"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/shou_list_phone"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:src="@drawable/list_phone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shou_list_Address"
                android:layout_width="80.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp"
                android:text="地址"/>

            <TextView
                android:id="@+id/ColumnTypeName"
                android:layout_width="42.0dip"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/shou_list_Address"
                android:singleLine="true"
                android:textColor="@color/text_gray_color"
                android:textSize="14sp"
                android:text="类型"/>

            <TextView
                android:id="@+id/shou_list_time"
                android:layout_width="100.0dip"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/shijian"
                android:drawablePadding="5dp"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="@color/text_gray_color" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>