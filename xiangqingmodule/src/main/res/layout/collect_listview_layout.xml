<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/collect_listview_linear"
       >

        <ImageView

            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/defualt"
            android:id="@+id/collect_listview_image"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:id="@+id/collect_shop_name"
                android:textSize="15dp"
                android:text="商店名"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:textSize="15dp"
                android:text="平均消费"
                android:gravity="left|center"
                android:textColor="#F57921"
                android:id="@+id/collect_avrage"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="时间"
                    android:textSize="15dp"
                    android:gravity="center_vertical"

                    android:id="@+id/collect_time"
                    android:drawableLeft="@drawable/img_release_item_time"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textSize="15dp"
                android:gravity="left|center"
                android:id="@+id/collect_address"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="#50000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:layout_below="@id/collect_listview_linear">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal"
            android:id="@+id/collect_fengxiang"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_release_item_share"
                android:layout_margin="30dp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:text="分享"
                android:gravity="center"
                android:textSize="20dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="#50000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal"
            android:id="@+id/collect_shanchu"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/img_release_item_delete"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="删除"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>