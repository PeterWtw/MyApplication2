<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/jubaoppw"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="选择举报内容"
            android:gravity="left|center"
            android:textSize="14dp"
            android:textColor="#757575"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="质量问题或描述不符合"
                android:textSize="14dp"
                android:textColor="#000000"
                android:gravity="fill_vertical"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select"
                android:layout_gravity="right|center"
                android:id="@+id/jupopuw_zhiliang"
                android:clickable="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="服务态度恶劣"
                android:textSize="14dp"
                android:textColor="#000000"
                android:gravity="fill_vertical"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select"
                android:layout_gravity="right|center"
                android:id="@+id/jupopuw_taidu"
                android:clickable="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="虚假广告"
                android:textSize="14dp"
                android:textColor="#000000"
                android:gravity="fill_vertical"
                android:layout_weight="1"
                android:id="@+id/textView" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select"
                android:layout_gravity="right|center"
                android:id="@+id/jupopuw_guanggao"
                android:clickable="true"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="其他"
                android:textSize="14dp"
                android:textColor="#000000"
                android:gravity="fill_vertical"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/select"
                android:layout_gravity="right|center"
                android:id="@+id/jupopuw_other"
                android:clickable="true"
                />
        </LinearLayout>
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#757575"
            android:textColor="#000000"
            android:hint="补充（0-100字）"
            android:gravity="top|left"
            android:visibility="gone"
            android:textSize="13dp"
            android:id="@+id/jupopuw_edittext"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="取消"
            android:textSize="21dp"
            android:textColor="#3F9F00"
            android:gravity="center_vertical|center"
            android:layout_weight="1"
            android:id="@+id/jupopuw_cancel"
            />
        <ImageView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="确认提交"
            android:textSize="21dp"
            android:textColor="#3F9F00"
            android:gravity="center_vertical|center"
            android:layout_weight="1"
            android:id="@+id/jupopuw_confirm"
        />
    </LinearLayout>
</LinearLayout>